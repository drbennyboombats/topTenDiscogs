<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="styles\main.css">
    <title>Most Wanted Discogs Releases</title>
</head>
<body>
    <% if (locals.topTenTitles) { %>

    <div class="scroll">

    
        <table class="table">

            <thead class="headerRow">
              <tr>
                <th scope="col">#</th>
                <th scope="col">Title</th>
                <th scope="col">Wants</th>
                <th scope="col">URI</th>
              </tr>
            </thead>
            <tbody>
                <% for (let q=0;q<topTenTitles.length;q++) { %>
                    <tr>
                        <th scope="row"><%=q+1%></th>
                        <td><%=topTenTitles[q]%></td>
                        <td><%=topTenWants[q]%></td>
                        <td><a href="https://www.discogs.com<%=topTenURIs[q]%>">www.discogs.com<%=topTenURIs[q]%></a></td>
                    </tr>
                <% } %>
              </tbody>
        </table>

    </div>
    <% } else if (locals.noResults && locals.artist) { %>
        <form class="form-signin" id="form" method="post" action="/search">
            <img class="mb-4" src="images\music-note-list.svg" alt="" width="72" height="72">
            <h1 class="h3 mb-3 font-weight-normal">Enter artist name to top fetch 10 most wanted releases from Discogs!</h1>
            <input id="inputArtist" class="form-control" placeholder="artist name" name="artist" required autofocus>
            <button class="btn btn-lg btn-primary btn-block" id="signInButton" type="submit">Search</button>
            <br>
            <p>No results found for <%=artist%></p>
        </form>

    <% } else { %>
        <form class="form-signin" id="form" method="post" action="/search">
            <img class="mb-4" src="images\music-note-list.svg" alt="" width="72" height="72">
            <h1 class="h3 mb-3 font-weight-normal">Enter artist name to top fetch 10 most wanted releases from Discogs!</h1>
            <input id="inputArtist" class="form-control" placeholder="artist name" name="artist" required autofocus>
            <button class="btn btn-lg btn-primary btn-block" id="signInButton" type="submit">Search</button>
        </form>
    <% } %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    



</body>
</html>